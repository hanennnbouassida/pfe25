{% extends 'base.html.twig' %}

{% block title %}Delete Product{% endblock %}

{% block content %}
    <h1>Delete Product</h1>
    <p>Are you sure you want to delete the product "{{ product.getProductName() }}"?</p>
    <form action="{{ path('product_delete_confirm', {'id': product.id}) }}" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="{{ path('dashboard_business') }}" class="btn btn-secondary">Cancel</a>
    </form>
{% endblock %}
